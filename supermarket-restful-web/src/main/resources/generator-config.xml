<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
  PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
  "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
	<properties resource="mybatis-generator.properties"/>
	
	<classPathEntry location="${db.jdbcDriverLocation}" />
	
	<context id="mysql_tables" targetRuntime="MyBatis3" defaultModelType="flat">
		<commentGenerator>
			<!-- <property name="suppressDate" value="true"/> -->
			<property name="suppressAllComments" value="true"/>
		</commentGenerator>
		<jdbcConnection
			driverClass="${db.driverClass}"
			connectionURL="${db.url}" 
			userId="${db.username}" 
			password="${db.password}">
		</jdbcConnection>

		<javaTypeResolver>
			<property name="forceBigDecimals" value="true" />
			<property name="useJSR310Types" value="true"/>
		</javaTypeResolver>

		<javaModelGenerator 
			targetPackage="${javaModel.targetPackage}"
			targetProject="${javaModel.targetProject}">
			<property name="enableSubPackages" value="false" />
			<property name="rootClass" value="cn.navyd.app.supermarket.domain.BaseDO"/>
			<property name="trimStrings" value="false" />
		</javaModelGenerator>

		<sqlMapGenerator 
			targetPackage="${sqlMapper.targetPackage}"
			targetProject="${sqlMapper.targetProject}">
			<property name="enableSubPackages" value="false" />
		</sqlMapGenerator>

		<javaClientGenerator 
			type="XMLMAPPER"
			targetPackage="${javaMapper.targetPackage}"
			targetProject="${javaMapper.targetProject}">
			<property name="enableSubPackages" value="true" />
		</javaClientGenerator>

		<table
			tableName="user_info"
			domainObjectName="UserDO"
			mapperName="UserDao"
			catalog="supermarket_new" 
			enableCountByExample="false"
			enableSelectByExample="false"
			enableDeleteByExample="false"
			enableUpdateByExample="true">
			<!-- catalog使用数据库名称，可以避免无法找到主键问题 -->
			<!-- 修改 列名-属性名 -->
			<columnRenamingRule searchString="is_enabled" replaceString="enabled"/>
			<columnOverride column="is_enabled" javaType="Boolean"></columnOverride>
		</table>

	</context>
</generatorConfiguration>

